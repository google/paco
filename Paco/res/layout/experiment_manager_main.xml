	<ScrollView
	 xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_gravity="center|top">

<LinearLayout
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:id="@+id/main_layout"
	android:layout_gravity="center|top">
	<TextView android:id="@+id/ExperimentManagerTitle"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="25dip" android:text="@string/experiment_manager_screen_welcome_to_paco"
		android:paddingBottom="5dip" android:gravity="center"
		android:textStyle="bold" />
	<TextView android:id="@+id/ExperimentManagerSubTitle"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="18dip" android:text="@string/experiment_manager_screen_subtitle"
		android:paddingBottom="10dip" android:gravity="center"
		android:textStyle="italic" />
	<TextView android:id="@+id/StatusBar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:gravity="center" android:text="" />

			<TableLayout android:shrinkColumns="*" 
				android:id="@+id/GridView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center" android:gravity="center">
				<TableRow android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="center">

					<ImageButton
					    android:id="@+id/FindExperimentsBtn"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@android:color/transparent"
					    android:contentDescription="@string/find_experiments"
					    android:maxWidth="140dp"
					    android:minWidth="140dp"
					    android:src="@drawable/find_experiments_button" />

					<ImageButton android:layout_height="fill_parent"
						android:layout_gravity="center" android:id="@+id/CurrentExperimentsBtn"
						android:contentDescription="@string/running_experiments" android:layout_width="fill_parent"
						android:minWidth="140dp" android:maxWidth="140dp"
						android:background="@android:color/transparent" android:src="@drawable/current_experiments_button" />

				</TableRow>
				<TableRow android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="center" >

					<TextView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:gravity="center"
					    android:shrinkColumns="*"
					    android:text="@string/find_experiments" />

					<TextView android:text="@string/running_experiments" android:id="@+id/TextView01"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:gravity="center" />
				</TableRow>
				<TableRow android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="center">

					<ImageButton
					    android:id="@+id/ExploreDataBtn"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@android:color/transparent"
					    android:contentDescription="@string/explore_data"
					    android:maxWidth="140dp"
					    android:minWidth="140dp"
					    android:src="@drawable/explore_data_button" />

					<ImageButton
					    android:id="@+id/CreateExperimentBtn"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@android:color/transparent"
					    android:contentDescription="@string/create_experiment"
					    android:maxWidth="140dp"
					    android:minWidth="140dp"
					    android:src="@drawable/create_experiments_button" />

					
				</TableRow>
				<TableRow android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="center">

					<TextView
					    android:id="@+id/ExploreDataLabel"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:gravity="center"
					    android:text="@string/explore_data" />

					<TextView
					    android:id="@+id/CreateExperimentLabel"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:gravity="center"
					    android:text="@string/create_experiment" />

				</TableRow>
				<TableRow android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="center">

					<ImageButton
					    android:id="@+id/HelpButton"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@android:color/transparent"
					    android:contentDescription="@string/user_guide"
					    android:maxWidth="140dp"
					    android:minWidth="140dp"
					    android:src="@drawable/help_button" />

					<ImageButton android:id="@+id/FeedbackButton"
                        android:contentDescription="@string/contact_us"
						android:layout_gravity="center" android:layout_width="fill_parent"
						android:layout_height="fill_parent" android:src="@drawable/feedback_button"
						android:minWidth="140dp" android:maxWidth="140dp"
						android:background="@android:color/transparent" />
     					
				</TableRow>
				<TableRow android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="center">

					<TextView
					    android:id="@+id/helpLabel"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:gravity="center"
					    android:text="@string/user_guide" />

					<TextView android:text="@string/contact_us" android:id="@+id/FeedbackLabel"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:gravity="center"></TextView>
     									
				</TableRow>
			</TableLayout>
</LinearLayout>
</ScrollView>
