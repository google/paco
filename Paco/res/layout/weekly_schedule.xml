<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	android:orientation="vertical" android:layout_gravity="center"
  android:id="@+id/scheduleRootView" >
	
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="20dip"
		android:text="@string/daily_scheduled_time_for"></TextView>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="25dip"
		android:id="@+id/experimentNameSchedule" android:text=""></TextView>

	<include layout="@layout/repeat_on_dow_schedule" />

	<include layout="@layout/repeat_every_n_schedule" />
	<ListView android:id="@+id/timesList" android:layout_width="wrap_content" android:layout_height="260dp"/>
</LinearLayout>
