<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:stretchColumns="2">
  <TableRow>
    <ImageView
      android:layout_column="1" android:src="@drawable/paco64"/>
    <LinearLayout
      android:layout_column="2"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="vertical">
      <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp" />
      <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp" />
    </LinearLayout>
  </TableRow>

  <View
    android:layout_height="2dip" />

  <TableRow>
    <TextView
      android:paddingLeft="10dip"
      android:paddingRight="10dip"
      android:layout_column="1"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/about_team"
      android:textSize="15sp" />
    <LinearLayout
      android:layout_column="2"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="vertical">
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_bob"
        android:textSize="10sp" />
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_alberto"
        android:textSize="10sp" />        
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_tina"
        android:textSize="10sp" />
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_brian"
        android:textSize="10sp" />
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_arun"
        android:textSize="10sp" />
        
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_kanwal"
        android:textSize="10sp" />
        
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_cp"
        android:textSize="10sp" />
      <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/about_stephen"
        android:textSize="10sp" />
    </LinearLayout>
  </TableRow>

  <View
    android:layout_height="2dip" />

  <TableRow>
    <TextView
      android:paddingLeft="10dip"
      android:paddingRight="10dip"
      android:layout_column="1"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/about_version"
      android:textSize="20sp" />
    <TextView
        android:id="@+id/versionField"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text=""
      android:textSize="20sp" />
  </TableRow>

  <View
    android:layout_height="2dip" />

  <TableRow>
    <TextView
      android:paddingLeft="10dip"
      android:paddingRight="10dip"
      android:layout_column="1"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/about_support"
      android:textSize="20sp" />
    <TextView
      android:autoLink="web"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/about_weburl"
      android:textSize="18sp" />
  </TableRow>

  <View
    android:layout_height="4dip" />

</TableLayout>
