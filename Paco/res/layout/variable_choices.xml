<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:gravity="center|top"
  android:layout_gravity="center|top" android:layout_width="fill_parent"
  android:layout_height="fill_parent">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:gravity="center|top"
    android:layout_gravity="center|top" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >

    <TextView android:text="@string/explore_data_variable_title" android:id="@+id/VariableListTitle"
      android:gravity="center|top" android:layout_gravity="center|top"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:background="@drawable/list_header_background"
      android:textColor="#ffffff" />
    <ListView android:layout_width="fill_parent"
      android:layout_gravity="center|top" android:id="@+id/exploreable_experiments_list" android:layout_height="wrap_content"/>
    <ListView android:layout_width="fill_parent"
      android:layout_gravity="center|top" android:id="@+id/exploreable_variables_list" android:layout_height="wrap_content"/>
   </LinearLayout>
  <LinearLayout
    android:orientation="vertical" 
    android:gravity="center|top"
    android:layout_gravity="center|top" 
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_weight="0"
    >
      <Button android:text="@string/ok" android:id="@+id/VarOkButton" android:layout_height="wrap_content" android:visibility="gone" android:layout_width="wrap_content"></Button>
  </LinearLayout>



</LinearLayout>
