<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/menuButton"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/experimentListRowTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left"
            android:paddingBottom="2dip"
            android:paddingLeft="8dip"
            android:paddingTop="4dip"
            android:text="Experiment Title"
            android:textColor="@color/purple_background"
            android:textSize="24dip" />

        <TextView
            android:id="@+id/experimentListRowSubtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingTop="0dip"
            android:text=""
            android:textSize="16dip" />

        <TextView
            android:id="@+id/experimentListRowJoinDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingTop="4dip"
            android:text=""
            android:textSize="12dip" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:contentDescription="Experiment Menu"
        android:paddingBottom="4dip"
        android:paddingLeft="8dip" 
        android:paddingRight="8dip" 
        android:paddingTop="8dip"
        android:src="@drawable/ic_more_vert_black_24dp" />

</RelativeLayout>